<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#ff4a6c9b"
                android:endColor="#ff2c68e7"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ff000000" />
           <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ff859dbc"
                android:endColor="#ff4a6c9b"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ff000000" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>